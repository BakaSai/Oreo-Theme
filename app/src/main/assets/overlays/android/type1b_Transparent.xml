<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Settings App-->
    <color name="background_material_dark">#81000000</color>    <!--OG:@color/material_grey_850-->
	
    <!--Volume Panel-->
    <color name="primary_material_dark">#81000000</color>    <!--OG:@color/material_grey_900-->

    <!--Other-->
    <color name="background_floating_material_dark">#81000000</color>   <!--OG:@color/material_grey_800-->
    <color name="bright_foreground_light_disabled">#81000000</color>   <!--OG:##80000000-->
    <color name="background_holo_dark">#81000000</color>   <!--OG:#ff000000-->
    <color name="user_icon_8">#ffffffff</color>

    <!--Settings App-->
    <style name="Theme.DeviceDefault.Settings" parent="@*android:style/Theme.Material">
        <item name="android:actionBarTheme">@*android:style/ThemeOverlay.DeviceDefault.ActionBar.Accent</item>    <!--OG:@style/ThemeOverlay.DeviceDefault.ActionBar.Accent-->
        <item name="android:colorPrimary">@*android:color/primary_material_dark</item>    <!--OG:@color/primary_device_default_settings_light-->
        <item name="android:colorPrimaryDark">@*android:color/background_holo_dark</item>   <!--OG:@color/primary_dark_device_default_settings_light-->
        <item name="android:colorAccent">@*android:color/material_deep_teal_500</item>    <!--OG:@color/accent_device_default_light-->
        <item name="android:navigationBarColor">@*android:color/primary_material_dark</item>   <!--OG:@color/white-->
        <item name="android:colorEdgeEffect">#ffffffff</item>    <!--OG:@color/black-->
        <item name="android:colorSecondary">@*android:color/background_material_dark</item>    <!--OG:@color/secondary_device_default_settings_light-->
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@*android:color/primary_material_dark</item>
        <!--Self-defined-->
        <item name="android:colorControlNormal">@*android:color/material_deep_teal_500</item>
        <item name="android:textColorPrimaryInverse">@*android:color/background_material_dark</item>
        <!--Experimental: Translucency-->
        <item name="android:windowShowWallpaper">true</item>   <!--Nukes navbar fade-out on Android 8.1: No fixes-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

</resources>
